<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
	version="2.0">
	<entity class="dst2.model.User">
		<named-query name="usersByCredentials">
			<query>select user from User user where user.username like :username and user.password like :password</query>
		</named-query>
	</entity>
	<entity class="dst2.model.Computer" name="Computer">
		<table name="computer">
			<unique-constraint>
				<column-name>name</column-name>
			</unique-constraint>
		</table>
		<attributes>
			<id name="id">
				<column name="id" />
				<generated-value />
			</id>
			<basic name="name" optional="false">
				<column name="name" />
			</basic>
			<basic name="CPUs" optional="false">
				<column name="cpus" />
			</basic>
			<basic name="location" optional="false">
				<column name="location" />
			</basic>
			<basic name="creation" optional="false">
				<column name="creation" />
				<temporal>DATE</temporal>
			</basic>
			<basic name="lastUpdate" optional="false">
				<column name="lastUpdate" />
				<temporal>DATE</temporal>
			</basic>
			<many-to-one name="controlledBy" optional="false">
				<join-column name="controlledBy" />
			</many-to-one>
			<many-to-many name="running">
				<join-table name="computer_execution">
					<join-column name="running_id" />
					<inverse-join-column name="runsOn_id" />
				</join-table>
				<cascade>
					<cascade-all />
				</cascade>
			</many-to-many>
		</attributes>
	</entity>
</entity-mappings>